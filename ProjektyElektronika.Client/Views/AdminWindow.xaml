<Window x:Class="ProjektyElektronika.Client.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektyElektronika.Client.Views"
        xmlns:converters="clr-namespace:ProjektyElektronika.Client.Converters"
        mc:Ignorable="d" 
        Title="Zarządzanie projektami" Height="450" Width="800">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>

        <StackPanel Margin="5">
            
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <Button IsEnabled="{Binding IsOnline}" Command="{Binding AddProjectCommand}" Content="Wyślij"/>
            <Border Background="OrangeRed" Visibility="{Binding IsOnline, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                <Label Foreground="WhiteSmoke">Jesteś w trybie offline.</Label>
            </Border>
        </StackPanel>
    </Grid>
</Window>
